<?xml version="1.0" encoding="UTF-8"?>
<ti:module xmlns:ti="http://ti.tidev.io" xmlns:android="http://schemas.android.com/apk/res/android">
	<api-version>1</api-version>
    <version>1.1.0</version>
    <description>Share Image Module</description>
    <platform>iphone</platform>
    <minsdk>9.0.0</minsdk>
	<iphone>
		<apis>
			<api name="Ti.Module">
				<method name="share" type="void">
					<parameter name="text" type="String" optional="true"/>
                    			<parameter name="image" type="Ti.Blob" optional="true"/>
                    			<parameter name="callback" type="Function" optional="true"/>
				</method>
			</api>
		</apis>
	</iphone>
	<android xmlns:android="http://schemas.android.com/apk/res/android">
		<!-- Android specific configuration can go here -->
	</android>
</ti:module>
